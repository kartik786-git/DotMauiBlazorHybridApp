@using ShareRazorClassLibraryForAll.ViewModel;

@if (Visible)
{
<div class="row">
    <div class="col-md-6"><h3 class="d-inline">Blog details - Basic </h3></div>
    <div class="col-md-6 text-end"><button class="d-inline btn btn-primary" @onclick="BackToBlogList">Back to Blog list</button></div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <!-- Blog Detail Content -->
            <div class="card mt-5 ">
                <div class="image-container">
                    <img src="@EditBlog.ImageUrl" alt="Card Image" class="card-image" />
                </div>
                <div class="card-body">
                    <h5 class="card-title text-center">@EditBlog.Name</h5>
                    <p class="card-text">@EditBlog.Description</p>

                </div>
            </div>
        </div>
    </div>
</div>
}

@code {

    [Parameter]
    public bool Visible { get; set; }

    [Parameter]
    public BlogViewModel EditBlog { get; set; }

    [Parameter]
    public EventCallback BackToBlogClicked { get; set; }

    private void BackToBlogList()
    {
        BackToBlogClicked.InvokeAsync();
    }


}
